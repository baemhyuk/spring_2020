<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ync.mapper.MovieProgrampageMapper">
	
	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	
	<select id="getList_index" resultType="kr.ync.domain.MovieProgrampageVO">
	<![CDATA[
		select * from programpage where div_num = 1
		]]>
	</select>
	
	<select id="getList_tvshow" resultType="kr.ync.domain.MovieProgrampageVO">
	<![CDATA[
		select * from programpage where div_num = 2
		]]>
	</select>
	
	<insert id="insert">
		insert into programpage (prog_num, title, poster, year, rate, content, country, genre, div_num, video)
		values (seq_prog_num.nextval, #{title}, #{poster}, #{year}, #{rate}, #{content}, #{country}, #{genre}, #{div_num}, #{video})
	</insert>
	
	<insert id="insertSelectKey">

		<selectKey keyProperty="bno" order="BEFORE"
			resultType="Long">
			select seq_board.nextval from dual
		</selectKey>

		insert into tbl_board (bno,title,content, writer, file_1, file_2, file_3)
		values (#{bno},
		#{title}, #{content}, #{writer}, #{file_1}, #{file_2}, #{file_3})
	</insert>
	
	<select id="read" resultType="kr.ync.domain.MovieProgrampageVO">
		select * from programpage where prog_num =	#{prog_num}
	</select>


	<delete id="delete">
		delete programpage where prog_num = #{prog_num}
	</delete>
 
	<update id="update">
		update programpage
		set title= #{title},
			poster=#{poster},
			year = #{year},
			rate = #{rate},
			content = #{content},
			country = #{country},
			genre = #{genre},
			div_num = #{div_num},
			video = #{video}
			
		where prog_num = #{prog_num}
	</update>
	
